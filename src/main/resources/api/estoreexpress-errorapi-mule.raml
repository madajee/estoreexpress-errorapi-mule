#%RAML 1.0
title: estoreexpress-errorapi-mule

uses:
  apiLib: datatypes/apilib.raml

/ping:
  get:
    description: ping
    responses:
      200:
        body:
          application/json:
            type: object
            examples:
              example1: !include examples/test1.raml
/createerror:
  post:
    description: createuser
    body:
        application/json:
          type:  apiLib.createerror
          example: |
            {
              "errorcode": "0001",
              "errortype": "APPERROR:CLIENT_ALREADY_EXISTS",
              "errormessage": "The client with ID: test1 is already registered",
              "msgtype": "register"              
            }
    responses:
      200:
        body:
          application/json:
            type: object
            examples:
              example1: !include examples/createerror.raml
/readerror:
  get:
    description: readerror
    responses:
      200:
        body:
          application/json:
            type: object
            examples:
              example1: !include examples/readerror.raml
